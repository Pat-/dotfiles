[bar/base]
enable-ipc = true
font-0=DejavuSans:style=Regular=12;2
font-1=JetBrainsMono Nerd Font:Size=12;2
font-2=IPAGothic:style=Regular:size=12

offset-y = 10
padding = 2
border-size = 1
border-color = ${colors.foreground}

height = 30
;radius = 10
;Works very well with a radius like this! Put it on every bar.

background = ${colors.background}
foreground = ${colors.foreground}

override-redirect=false
wm-restack = bspwm
bottom=false

[bar/main]
inherit = bar/base
enable-ipc = true
width = 60%

offset-x = 20%

modules-left = bspwm sep xwindow
modules-center = spotify
modules-right = pulseaudio time wlan

[bar/left]
inherit = bar/base
enable-ipc = true
width = 10.5%

modules-left = bspwm sep xwindow

offset-x = 0.7%

[bar/middle]
inherit = bar/base
enable-ipc = true
width = 13%

modules-center = spotify

offset-x = 44%


[bar/right]
inherit = bar/base
enable-ipc = true
width = 11%

modules-right = pulseaudio date time wlan

offset-x = 11.5%

;                      _       _           
;  _ __ ___   ___   __| |_   _| | ___  ___ 
