[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
label-overline = ${colors.foreground}
label-empty = Empty
label-empty-foreground = ${colors.grey}
format-margin = 1
label-maxlen = 30

[module/sep]
type = custom/text
content = |

[module/bspwm]
type = internal/bspwm
reverse-scroll = false
pin-workspaces = true

label-focused = %name%
label-focused-foreground = ${colors.color1}
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.color6}
label-occupied-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.color12}
label-empty-padding = 1

[module/date]
type = internal/date
interval = 10
format-margin = 1
format =   <label>

time = "%I:%M %p"
date = "%m/%d/%Y"

label-foreground = ${colors.color6}

label = %date%,

[module/time]
type = internal/date
interval = 10
format-margin = 0
format =    <label>

time = "%I:%M %p"
date = "%m/%d/%Y"

label-foreground = ${colors.color6}

label = %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume-margin = 1
format-volume = <ramp-volume>  <label-volume>
label-volume-foreground = ${colors.color6}
label-volume = %percentage:3:3%%
use-ui-max = false
interval = 5

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

format-muted =  <label-muted>
label-muted = "muted"
label-muted-foreground = ${colors.color6} 
label-muted-padding = 0

click-right = pavucontrol

;Spotify modules

[module/spotify]
type = custom/script
exec = playerctl -p spotify metadata --format 'Now Playing: {{artist}} - {{title}}'
exec-if = "pgrep spotify"
format-padding = 1
tail = true
interval = 1
format =   <label>
label-foreground = ${colors.color6}
label-maxlen = 50

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0

format-connected =   <label-connected>
label-connected-foreground = ${colors.color6}
format-connected-underline = #9f78e1
label-connected = %essid%
format-connected-margin = 1

;format-disconnected =
format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.color12}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0

